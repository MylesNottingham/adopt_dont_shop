<h1>New Application for Adoption</h1>

<%= form_with url: '/applications', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br/><br/>
  <section>
    <%= form.label :address , "Street Address" %>
    <%= form.text_field :address %>
    <%= form.label :city %>
    <%= form.text_field :city %>
    <%= form.label :state %>
    <%= form.text_field :state %>
    <%= form.label :zip , "Zip Code" %>
    <%= form.text_field :zip %>
  </section><br/><br/>
  <section>
  <h3>Add a Pet to this Application</h3>
  <%= form_with url: "/pets", method: :get, local: true do |f| %>
    <%= f.label :search%>
    <%= f.text_field :search %>
    <%= f.submit "Search" %>
  <% end %>
  </section><br/><br/>
  <%= form.label :description_why , "Why would you make a good home?" %><br/>
  <%= form.text_area :description_why , size: '60x10' %><br/><br/>

  <%= form.submit "Submit Application" %>
<% end %>
